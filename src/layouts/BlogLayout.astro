---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";

interface Props {
  description: string;
}

const { description } = Astro.props;
---

<html lang="es">
  <head>
    <BaseHead title="El Blog de TMCheiN" description={description} />
  </head>
  <body class="bg-white dark:bg-midnight px-4 lg:px-0">
    <div>
      <Header client:load />
      <main class="max-w-sm w-full mx-auto">
        <slot />
      </main>
    </div>
  </body>
</html>
